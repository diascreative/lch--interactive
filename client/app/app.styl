@import '../components/_variables.styl'

@font-face
  font-family OmnesMedium
  font-weight normal
  src url(/assets/fonts/OmnesMedium.eot)
  src url(/assets/fonts/OmnesMedium.eot?#iefix) format('embedded-opentype'), url(/assets/fonts/OmnesMedium.woff2) format('woff2'), url(/assets/fonts/OmnesMedium.woff2) format('woff2'), url(/assets/fonts/OmnesMedium.woff) format('woff'), url(/assets/fonts/OmnesMedium.ttf) format('truetype')

@font-face
  font-family LetteraTextStd
  font-weight normal
  src url(/assets/fonts/LetteraTextStd.eot)
  src url(/assets/fonts/LetteraTextStd.eot?#iefix) format('embedded-opentype'), url(/assets/fonts/LetteraTextStd.woff2) format('woff2'), url(/assets/fonts/LetteraTextStd.woff2) format('woff2'), url(/assets/fonts/LetteraTextStd.woff) format('woff'), url(/assets/fonts/LetteraTextStd.ttf) format('truetype')

@font-face
  font-family LetteraTextStd
  font-weight bold
  src url(/assets/fonts/LetteraTextStd-Bold.eot)
  src url(/assets/fonts/LetteraTextStd-Bold.eot?#iefix) format('embedded-opentype'), url(/assets/fonts/LetteraTextStd-Bold.woff2) format('woff2'), url(/assets/fonts/LetteraTextStd-Bold.woff2) format('woff2'), url(/assets/fonts/LetteraTextStd-Bold.woff) format('woff'), url(/assets/fonts/LetteraTextStd-Bold.ttf) format('truetype')

/*
 * Layout
 */
h1
h2
h3
h4
h5
  color $font-color-primary
  font normal normal 18px/22px $font-secondary
  letter-spacing .3px
  margin 0
  padding 0

h4
  border-bottom solid 1px $font-color-primary
  font-size 18px
  letter-spacing -.09px
  line-height 22px
  margin 20px 0 8px
  padding 0 0 2px

p
  margin 12px 0

// Component styles are injected through grunt
/* inject:styl */
@import 'filter/filter.styl';
@import 'installation/installation.styl';
@import 'main/main.styl';
@import '../components/about.styl';
@import '../components/selectize/main.styl';
@import '../components/tooltip/tooltip.styl';
/* endinject */
