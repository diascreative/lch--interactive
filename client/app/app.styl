@import '../components/_variables.styl'

/*
 * Layout
 */
body,
html
  margin 0
  padding 0

body
  background #fff
  color $font-color-primary
  font-family $font-primary
  // font-size calc(.3em + 1vw)
  font-size 14px
  line-height calc(1em + 4px)
  overflow auto
  overflow-y scroll
  text-rendering geometricPrecision

*
  box-sizing border-box

h1
h2
h3
h4
h5
  color $font-color-primary
  font normal normal 18px/22px $font-secondary
  letter-spacing .3px
  margin 0
  padding 0

h4
  border-bottom solid 1px $font-color-primary
  margin 16px 0 10px
  padding 4px 0

// Component styles are injected through grunt
/* inject:styl */
@import 'main/main.styl';
@import '../components/about.styl';
@import '../components/selectize/main.styl';
/* endinject */
