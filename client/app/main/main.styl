.main-title
  color $color-primary
  font-size 33px
  letter-spacing .05px
  line-height 33px

.strapline
  color $color-primary
  font normal normal 14px/18px $font-primary
  letter-spacing 0

.intro-text
  border-top solid 1px $color-secondary
  color $color-secondary
  font 22px/22px $font-secondary
  letter-spacing 0.08px
  margin 26px 0
  padding 22px 0

.large-text
  font 32px/32px $font-primary

div.large-text
  border-top 1px dashed #fff
  margin 10px 0
  padding 5px 0

/*
 * Filters
 */

.logo
  float left
  margin 0 10px 0 0

.filters
  background rgba(#fff, .95)
  box-shadow 0 0 6px 3px rgba(0, 0, 0, .15)
  left 0
  height calc(100vh - 76px)
  max-height calc(100vh - 76px)
  max-width $filter-width
  overflow auto
  padding 30px 48px 20px
  position absolute
  top 0
  width 100%
  z-index 100

  &__options
    position relative

  .postcode-seach
    border 0
    border-bottom solid 1px #D0D3D5
    display inline-block
    font-size 16px
    letter-spacing -.36px
    line-height 22px
    height 32px
    max-width 220px
    padding 5px 10px
    width 100%

  .ui-select-toggle
  .ui-select-search
    background transparent url(/assets/images/magnifying-glass.svg) 0 50% no-repeat
    border 0
    border-bottom solid 1px #D0D3D5
    display block
    font-size 16px
    letter-spacing -.36px
    line-height 22px
    height 32px
    padding 5px 10px 5px 35px
    width 100%

    &:focus
      border-color $font-color-primary
      outline 0

  .ui-select-choices
    list-style none
    margin 0
    padding 0
    z-index 2


  .ui-select-bootstrap .ui-select-choices-row.active > span
    background $color-secondary
    color #fff

  label
    display block
    margin-bottom 4px

  input[type='radio']
    position absolute
    vertical-align middle
    visibility hidden

    + span
      border 2px solid $font-color-primary
      border-radius 50%
      display inline-block
      height 1em
      position relative
      vertical-align middle
      width 1em

      &:before
        background $color-primary
        border-radius 50%
        content ''
        height 0.6em
        left 50%
        margin -0.3em 0 0 -0.3em
        position absolute
        top 50%
        transform scale(0, 0)
        transform-origin 50% 50%
        transition transform .6s cubic-bezier(0, 0, .25, 1)
        width 0.6em

    &:checked + span:before
      transform scale(1, 1)
      transition transform .6s cubic-bezier(.25, 1, 0, 0)

/*
 * Stats
 */
.stats
  background rgba(#00748D, .94)
  box-shadow 0 0 6px 3px rgba(0, 0, 0, .15)
  color #fff
  font 18px/22px $font-primary
  margin 20px -48px
  padding 16px 48px 16px
  position relative

  &:after
    background #fff
    bottom 100%
    content ''
    height 6px
    left 0
    position absolute
    right 0

/*
 * Map
 */

.graph
  canvas
    max-height 200px
    position relative
    max-width 100%

$animation-timing = .3s

.leaflet-zoom-anim .leaflet-zoom-animated
  transition transform 1s cubic-bezier(0, 0, .25, 1)

.map-section
  box-shadow 0 0 6px 3px rgba(0, 0, 0, .15)
  height calc(100vh - 76px)
  margin-left $filter-width
  padding 20px 20px 20px 0
  position relative
  width calc(100% - $filter-width)

.map
  height 100%
  width 100%

/* Map marker */
.leaflet-marker-icon
  background transparent
  border 0
  opacity .8

  &:before
    background url(/assets/images/marker.svg) 0 0 no-repeat
    background-size 30px 45px
    content ''
    display block
    height 100%
    left 0
    position absolute
    top 0
    transition transform cubic-bezier(.68, -.55, .265, 1.55) $animation-timing
    transform-origin 50% 100%
    width 100%
    will-change transform

    path
      fill #00748D

  &--hidden
    opacity 0
    visibility hidden
    transition opacity 1ms $animation-timing, visibility 1ms $animation-timing

    &:before
      transform scale(0, 0)

/* Map tooltip */
.leaflet-popup-content-wrapper
.leaflet-popup-tip
  background rgba(#fff, .94)
  box-shadow 0 0 6px 3px rgba(0, 0, 0, .15)

.leaflet-popup-content-wrapper
  border-radius 0

/*
 * Tablet
 */
@media $tablet
  .filters
    max-width none
    max-height 50vh
    overflow hidden

    &__copy
      float left

    &__options
      float right
      max-height 100%
      overflow auto

    &__copy
    &__options
      width 40%

  .map-section
    height 50vh
    margin 50vh 0 0
    padding 20px
    width 100%
