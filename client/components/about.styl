@font-face
  font-family Sentinel
  font-weight bold
  src url(/assets/fonts/Sentinel-Book.eot)
  src url(/assets/fonts/Sentinel-Book.eot?#iefix) format('embedded-opentype'), url(/assets/fonts/Sentinel-Book.woff2) format('woff2'), url(/assets/fonts/Sentinel-Book.woff2) format('woff2'), url(/assets/fonts/Sentinel-Book.woff) format('woff'), url(/assets/fonts/Sentinel-Book.ttf) format('truetype')

.about
  font-family Sentinel, Arial, sans-serif
  font-size 20px
  font-weight normal
  line-height calc(1em + 4px)
  margin 0 auto
  max-width 676px
  overflow-wrap break-word
  padding 60px 20px
  word-wrap break-word
  word-break break-word
  hyphens auto

  h1
    font-size 1.4em

  h2,
  h3
    font-size 1.3em
    margin 1.5em 0 0.4em

    + p
      margin-top 0

  h3
    font-size 1.2em

  p
    margin 1.2em 0

  a
    border-bottom solid 1px rgba($color-tertiary, .0)
    color $color-tertiary
    text-decoration none
    transition border .3s ease-in

    &:hover
    &:focus
      border-bottom-color rgba($color-tertiary, .9)
      transition border .3s ease-out
