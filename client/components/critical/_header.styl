// main header
.main-header
  background #fff
  box-shadow 0 0 6px 3px rgba(0, 0, 0, .15)
  min-height $header-height
  padding 12px 20px
  position relative
  text-align center
  z-index 2000

  @media $not-mobile
    text-align right

  &:after
    clear both
    content ''
    display block
    height 0
    width 100%

// logo section
.logo-section
  display block
  margin 0 0 20px
  text-align center

  @media $not-mobile
    float left
    margin 12px 0 0
    text-align left

.main-title
  display block
  margin 0

  img
    height auto
    max-width 100%

.strapline
  color $color-tertiary
  font normal normal 16px/17px $font-primary
  letter-spacing 0
  margin 0 auto

  @media $not-mobile
    margin 0

// main nav
.main-nav
  display block
  padding 0 10px
  vertical-align top

  @media $not-mobile
    display inline-block

  a
    display inline-block
    margin 0 3px
    text-decoration none
    transition opacity .3s cubic-bezier(0, 0, .25, 1)
    vertical-align middle

    &:not(.image-link)
      background $font-color-secondary
      border-radius 100px
      color #fff
      font 16px/22px $font-secondary
      padding 5px 14px 3px

    &:hover
    &:focus
      opacity .7

    img
      display block


// search section
.search
  display block
  padding 8px 20px 0
  position relative
  text-align center
  vertical-align middle

  @media $not-mobile
    display inline-block

  @media $desktop
    &:before
      content url(../assets/images/search-border.svg)
      display block
      left 0
      height 70px
      margin-top -35px
      position absolute
      top 50%
      width 3px

.filter-toggle
  background $font-color-secondary
  border 0
  border-radius 100px
  color #fff
  cursor pointer
  display inline-block
  font normal 16px/22px $font-secondary
  margin 12px 0 0
  min-height 30px
  min-width 222px
  overflow hidden
  outline 0
  position relative

  &:focus
    box-shadow 0 0 12px 2px rgba($color-secondary, .4)

  &__choice
    display block
    height 100%
    left 0
    padding 6px 12px 2px
    position absolute
    right 0
    top 0
    transform translateY(0)
    transition transform .4s cubic-bezier(0, 0, .25, 1)

    &:after
      content url(../assets/images/icon--filter-toggler.svg)
      display inline-block
      float right
      height 14px
      margin 4px 12px 0 10px
      vertical-align middle
      transition transform .4s .1s cubic-bezier(0, 0, .25, 1)
      width 19px

  &__choice--close
    transform translateY(-100%)

    &:after
      content url(../assets/images/icon--filter-close.svg)
      height 16px
      margin 2px 12px 0 13px
      transform translateY(-100%)
      width 16px

  &--on
    .filter-toggle__choice
      transform translateY(100%)

      &:after
        transform translateY(100%)

    .filter-toggle__choice--close
      transform translateY(0)

      &:after
        transform translateY(0)


.filters
  opacity 0
  visibility hidden

.ui-select-toggle
.ui-select-search
  background transparent url(../assets/images/magnifying-glass.svg) 0 50% no-repeat
  border 0
  border-bottom solid 1px $font-color-secondary
  color $font-color-secondary
  display block
  font 16px/22px $font-secondary
  letter-spacing -.36px
  height 32px
  padding 7px 10px 3px 35px
  text-align left
  width 100%

  &:focus
    border-color $font-color-primary
    outline 0

.ui-select-choices
  font-size 14px
  line-height 17px
  list-style none
  margin 0
  padding 0
  text-align left
  z-index 200

.ui-select-bootstrap .ui-select-choices-row.active > span
  background $color-secondary
  color #fff
